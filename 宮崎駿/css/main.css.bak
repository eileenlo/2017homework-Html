@charset "utf-8";
@import url(https://fonts.googleapis.com/earlyaccess/notosanstc.css);
@import url(https://fonts.googleapis.com/earlyaccess/cwtexfangsong.css);
@import url(https://fonts.googleapis.com/css?family=Yellowtail);
/*--------------*/
/*  html, body  */
/*--------------*/
html, body{
	line-height:28px; 	/*行高*/
	font-family: 'Noto Sans TC', sans-serif;
	background-color:#999;
	font-size:16px;
	background:url(../images/bg.jpg),url(../images/footer0.jpg);
	background-repeat:repeat-x,no-repeat;
	background-position:top,bottom;
	margin:0;
	
	/*background:url(../images/footer0.jpg);
	background-color:#fff;
	background-repeat:; 
	background-position:;*/
}

div.clear{
	clear:both;
}


/*--------------*/
/*   container  */
/*--------------*/
div.container{
	width:800px;
	margin-right:auto;
	margin-left:auto;
	border:1px solid #000;	/*邊界*/
	box-shadow:0px 0px 10px 1px #000;	/*影子(右,)*/
}


/*--------------*/
/*    header    */
/*--------------*/
div.header{
	height:150px;
	line-height:150px;
	padding-left:25px;
	background-color:#000;
	color:#333355;
	font-family: 'cwTeXFangSong', serif;
	background:url(../images/top.jpg);
}

div.header h1{
	margin:0;
}


/*--------------*/
/*    content   */
/*--------------*/
div.content{
	text-align:justify; 	/*文字自動對齊*/
	padding:20px 25px 20px 25px;	/*留白(上右下左)*/
	/*padding:20px 25px;	效果同上*/
	background:url(../images/footer1.jpg);
	background-color:#fff;
	background-repeat:no-repeat; 
	background-position:bottom;
	
}

div.content p.citation{
	font-family: 'cwTeXFangSong', serif;	/*中*/
	font-family: 'Yellowtail', cursive;		/*英*/
	margin:0 0 0 170px;
	font-weight:400;
	color:#888;
}

div.content img.author{
	float:left;
	border-radius:30px;	/*圓形邊界(半徑)*/
	box-shadow:0px 0px 5px 1px #000;
	
}

div.content h2{
	font-weight:500;
	border-left:8px solid #8ACCFE;
	padding-left:12px;
	color:#0D9DF2;
	font-style: italic;
}

div.content img.left{
	float:left;
	margin-right:15px;
	border:5px solid #FFF;
	box-shadow:0px 0px 5px 2px #999;
}
div.content img.right{
	float:right;
	margin-left:15px;
	border:5px solid #FFF;
	box-shadow:0px 0px 5px 2px #999;
}

div.content iframe{
	border:1px solid #000;
	box-shadow:0px 0px 5px 1px #000;
	border-radius:10px;
	margin-right:auto;
	margin-left:auto;
}
