@charset "utf-8";
/*顏色色票http://paletton.com/#uid=50W0L0klezxhqvYjrxfmZBtoMES*/
/*---------------------------*/
/* 引用思源中文                */
/*---------------------------*/
@import url(http://fonts.googleapis.com/earlyaccess/notosanstc.css);


/*---------------------------*/
/* 定義網頁                   */
/*---------------------------*/
html, body{
    font-size:17px;
    /*設定思源中文*/
    font-family: 'Noto Sans TC', sans-serif;
    font-weight: 280;	
    background-color:#444;
    background-image:url(../images/background.jpg);
		background-attachment:fixed;
		margin:0;	
}
div.clear{
	clear:both;
}

div h3{
	margin-top:0;
}
/*---------------------------*/
/* 定義標題                   */
/*---------------------------*/
div.header{
    width:100%;	
    min-width:800px;
    height:80px;
	margin-top:-80px;
    background-color:rgba(0,0,0,0.7);
    text-align:center;
    position:fixed;
    z-index:20;
    box-shadow:0px 1px 3px 1px #000;
}


/*---------------------------*/
/* 定義logo圖示               */
/*---------------------------*/
div.header img.logo{
    width:80px;
    height:80px;
    border-radius:40px;
    position:relative;
    z-index:30;    
    top:20px;
    box-shadow:0px 1px 3px 1px #000;
}


/*---------------------------*/
/* 定義導覽列                 */
/*---------------------------*/
div.navbar{	   
    width:800px;
    height:40px;
    line-height:40px;
    box-sizing:border-box;
    margin-left:auto;
    margin-right:auto;
    position:relative;
    top:-50px;    
}

div.navbar ul{	 
    margin:0;
    padding:0;
    list-style-type:none;	
}

div.navbar ul.left{
    float:left;
    margin-left:100px;
}

div.navbar ul.right{
    float:right;
    margin-right:100px;
}

div.navbar ul li{
    width:100px;
    text-align:center;	
    float:left;
    color:#FF0;
}


/*--~~~~~~~~~~~~~~~~~~~~~~~--*/
/* 定義容器                   */
/*--~~~~~~~~~~~~~~~~~~~~~~~--*/
div.container{
    width:800px;	
    position:relative;
    margin-left:auto;
    margin-right:auto;	
    top:80px;
}


/*---------------------------*/
/* 定義內容                   */
/*---------------------------*/
div.content{	   
    padding:0px 25px 20px 25px;
    box-sizing:border-box;
    background:#fff;
}

div.content h2{
    margin-top:0;
    padding-top:25px;
}

div.content h2:first-child{
    padding-top:55px;
}

div.content img.TOP{
	float:left;
	margin-top:40px;
	margin-right:50px;
	border:10px solid #FFF;
	box-shadow:0px 0px 5px 2px #999;
	width:50%;
    height:50%;
    
}
/*---------------------------*/
/* 定義表尾                   */
/*---------------------------*/
div.footer{
    height:100px;
    line-height:100px;
    background:#CCC;
    font-size:13px;
    text-align:center;
    letter-spacing:3px;
}

/*-----------TABLE------------*/
div.content td:nth-child(2){
	text-align:right;
	margin-right:0px;	
}
div.content td{
	border-bottom:1px solid #aaa;
}

img.left{
	float:left;
	width:0;
	height:0;
